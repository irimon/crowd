		<a href="projects/create_demo_projects" class="btn" id="demo-button"><strong>Add Demo</Demo></a>
	    <a href="projects/reset_demo_projects" class="btn" id="demo-button"><strong>Reset Demo</Demo></a>
		
		<h1>Add new project </h1>
		
		<%= form_for @project, :html => {:multipart => true} do |pr|  %>
			
			 <div class="top-form">
			  <%= pr.label :name, 'Project name' %>
			  <%= pr.text_field :name %>

			  <%= pr.label :description, 'Project Description' %>
			  <%= pr.text_area :description %>
			  
			  
			  <%= pr.label :phase, 'Phase of project' %>
			  <%= pr.select(:phase, [['Proof of concept',1], ['Construction',2], ['Operational',3]]) %>
			
			 
			  <%= pr.label :project_kind, 'Type of project' %>
			  <%= pr.select(:project_kind, [['Solar',1], ['Wind',2], ['Trash to electricity',3], ['Hydro',4], ['Other',5]]) %>
			 </div>
			 <div class="btn-group" data-toggle="buttons-radio">
				 <!-- 	  <h5> Project Kind	  </h5>

					  <%= pr.label :project_kind, 'Solar' %>
					  <%= pr.radio_button  :project_kind, 'Solar' %>
					  <%= pr.label :project_kind, 'Wind' %>
					  <%= pr.radio_button  :project_kind, 'Wind' %>
					  <%= pr.label :project_kind, 'Trash to electricity' %>
					  <%= pr.radio_button  :project_kind, 'Trash' %>
				</div> -->
			    
				<div class="other-project" id="Other-text" >
					<!--   <%= pr.label :project_kind, 'Other' %>
					  <%= pr.radio_button  :project_kind, 'Other' %> -->
				      <%= pr.text_field :project_kind%>
			    </div>
			
			<div class="bottom-form">
			  <%= pr.label :amount, 'Requested funding' %>
			  <%= pr.text_field :amount %>
            </div>
			
			 <%= pr.label :latitude, 'Latitude' %>
			  <%= pr.text_field :latitude %>
			  <%= pr.label :longitude, 'Longitude' %>
			  <%= pr.text_field :longitude %>
			
			<div class="submit-form">
			  <%= pr.submit "Create", class: "btn btn-large btn-primary" %>
			 </div>  
			 
		<% end %>
