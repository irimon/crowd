<!DOCTYPE html>


<body>
	<h1>Current projects </h1>
	<h2><%= link_to "Switch to map view", projects_map_path %></h2>

	<form class="row-fluid navbar-search pull-left" action="/projects" method="get">
		<input type="text" id="search" name="search" class="search-query" placeholder="Search">
	</form>


	<div class="projects_list">
			
				
			 	<% if @projects %>
				<% company_list = ['Lean&Green','CleanFuture','Energico']%>
				<% ind = 0 %>
				<% for proj in @projects %>
					
					<% if ind%3 == 0 %>
						<div class="row-fluid">
						<ul class="thumbnails">
					<% end %>
					<li class="span4">
						<div class="thumbnail">
							<%  if proj.picture_url? %>
								<%= image_tag(proj.picture_url)  %>
							<% else %>
								<img src="../assets/cat2.jpg" alt="some great picture of a cat">   
							<% end %>
						
						<% if proj.percent_funded*100 >= 100 %>
							<div class="funded">
								<span class="label label-success">Funded</span>
							</div>	
						<% end %>	
						
						<div class="caption">
						     <% rand_num = rand(0..2) %>
							 <% if rand_num == 0 %>
								  <%  my_path = companies_0_path  %>
						     <% end %>
							 <% if rand_num == 1 %>
							      <%  my_path = companies_1_path  %>
						    <% end %>
							<% if rand_num == 2 %>
								  <%  my_path = companies_2_path  %>
							<% end %>
							
							<h3><%= proj.name %></h3>
							<h4>by <%= link_to company_list[rand_num], my_path %>
								<a href="static_pages/contact_company" class="btn" id="mail-button"><i class="icon-envelope"></i></a>
							</h4>
							<p><%= proj.description %></p>
							<div class="progress progress-striped">
								<div class="bar" style="width: <%= proj.percent_funded*100 %>%;"></div>
							</div>
							 <div>
								<h4>Received $ <%= proj.funding_received %></h4>
								
								<h5><%= (proj.percent_funded*100).to_int %>% funded</h5>
							 </div>
						  </div>
						  <% if proj.percent_funded*100 < 100 %>
								<a class="btn" href="#">Join in</a>
						  <% else %>
						  		<a class="btn" id="closed" href="#">Closed</a>
						  <% end %>
						</div>
					</li>
					
					<% if ind%3 == 2 %>
						 </ul>
						</div>
					<% end %>
					<%  ind = ind+1 %>
				<% end %>
			<% end %> 
			  
			  
			  
			  
            </ul>
         </div>
     </div>
</body>